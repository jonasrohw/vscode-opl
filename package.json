{
    "name": "opl",
    "displayName": "OPL",
    "description": "OPL Language Syntax Highlighting",
    "version": "0.0.2",
    "author": {
        "name": "Krerkkiat Chusap",
        "email": "contact@kchusap.com"
    },
    "publisher": "kchusap",
    "repository": {
		"type": "git",
		"url": "https://github.com/krerkkiat/vscode-opl.git"
	},
    "engines": {
        "vscode": "^1.39.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "opl",
            "aliases": ["OPL", "opl"],
            "extensions": [".mod"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "opl",
            "scopeName": "source.opl",
            "path": "./syntaxes/opl.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "opl",
                "path": "./snippets.json"
            }
        ]
    }
}
